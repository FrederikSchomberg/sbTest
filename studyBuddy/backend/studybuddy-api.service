[Unit]
Description=StudyBuddy FastAPI Service
After=network.target

[Service]
User=www-data
WorkingDirectory=/home/kali/studyBuddy/backend
ExecStart=/home/kali/studyBuddy/backend/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
